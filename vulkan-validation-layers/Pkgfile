# Description:	Vulkan validation layers
# URL:		https://www.khronos.org/vulkan/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cmake glslang libxcb libx11 libxrandr spirv-tools vulkan-headers wayland-protocols

name=vulkan-validation-layers
_realname=Vulkan-ValidationLayers
version=1.3.224.1
release=1
source=(https://github.com/KhronosGroup/${_realname}/archive/sdk-${version}/${_realname}-sdk-${version}.tar.gz)

build() {
	cd ${_realname}-sdk-${version}

	mkdir build
	cd build

	cmake .. \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_LAYER_SUPPORT_FILES=ON \
		-DBUILD_SHARED_LIBS=ON \
		-DBUILD_WSI_XCB_SUPPORT=ON \
		-DBUILD_WSI_XLIB_SUPPORT=ON \
		-DBUILD_WSI_WAYLAND_SUPPORT=ON \
		-DUSE_ROBIN_HOOD_HASHING=OFF \
		-DBUILD_TESTS=OFF \
		-DBUILD_WERROR=OFF \
		-Wno-dev

	make -O ${JOBS:+-j ${JOBS}} V=1 VERBOSE=1

	make DESTDIR=$PKG install
}
