# Description:	A multi-platform library for OpenGL, OpenGL ES and Vulkan development
# URL:		https://www.glfw.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	libglvnd samurai vulkan-loader libxcursor libxi libxinerama

name=glfw3
_realname=glfw
version=3.3.8
release=1
source=(https://github.com/glfw/${_realname}/releases/download/${version}/${_realname}-${version}.zip)

build() {
	cd ${_realname}-${version}

	mkdir build
	cd build

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_C_FLAGS_RELEASE="${CFLAGS}" \
		-DBUILD_SHARED_LIBS=ON \
		-Wno-dev

	ninja -v

	DESTDIR=$PKG ninja install
}
