# Description:	X.org bitstream Type1 fonts
# URL:		http://xorg.freedesktop.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	bdftopcf encodings font-alias fontconfig font-util

name=font-bitstream-type1
version=1.0.3
release=1
source=(https://www.x.org/releases/individual/font/${name}-${version}.tar.bz2)

build() {
	cd ${name}-${version}

	./configure \
		--build=$CHOST \
		--prefix=/usr \
		--with-fontdir=/usr/share/fonts/Type1

	make V=1

	make -j1 DESTDIR=$PKG install

	rm $PKG/usr/share/fonts/Type1/fonts.{dir,scale}
}
