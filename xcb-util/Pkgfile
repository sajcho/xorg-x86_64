# Description:	XCB utilities library
# URL:		http://xcb.freedesktop.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	libxcb

name=xcb-util
version=0.4.0
release=0
source=(https://xcb.freedesktop.org/dist/${name}-${version}.tar.bz2)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr

	make

	make DESTDIR=$PKG install
}
