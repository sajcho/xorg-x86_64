# Description:	X Window System server
# URL:		http://xorg.freedesktop.org
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	bdftopcf font-util libdmx libepoxy libxaw libxcomposite libxcursor libxcvt libxfont2 libxft libxinerama libxkbfile libxres libxtst libxxf86dga mkfontscale nettle xcb-util-keysyms xcb-util-wm xcb-util-xrm xcb-util-cursor

name=xorg-server
version=21.1.6
release=1
source=(https://www.x.org/releases/individual/xserver/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	_fontroot="/usr/share/fonts"

	build-meson \
		--sysconfdir=/etc/X11 \
		-Dxorg=true \
		-Dxephyr=true \
		-Dglamor=true \
		-Dxnest=true \
		-Dxvfb=true \
		-Dxwin=false \
		-Dglx=true \
		-Dxdmcp=true \
		-Dxdm-auth-1=true \
		-Dxcsecurity=true \
		-Dsecure-rpc=false \
		-Dipv6=true \
		-Dlisten_tcp=false \
		-Dlisten_unix=true \
		-Dlisten_local=true \
		-Dsuid_wrapper=true \
		-Dpciaccess=true \
		-Dudev=true \
		-Dhal=false \
		-Dsystemd_logind=false \
		-Ddpms=true \
		-Ddri1=true \
		-Ddri2=true \
		-Ddri3=true \
		-Dvendor_name="SAUX-x86_64" \
		-Dxkb_dir=/usr/share/X11/xkb \
		-Dxkb_output_dir=/var/lib/xkb \
		-Ddefault_font_path=$_fontroot/misc,$_fontroot/100dpi:unscaled,$_fontroot/75dpi:unscaled,$_fontroot/otf,$_fontroot/truetype,$_fontroot/Type1 \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -v -C build

	DESTDIR=$PKG meson install --no-rebuild -C build

	chmod u+s $PKG/usr/lib/Xorg.wrap
	chmod u+s $PKG/usr/bin/Xorg

	install -m 0755 -d $PKG/etc/X11/xorg.conf.d
}
